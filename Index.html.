  <script>
    const pistas = [
      "Pista 1: Procure onde guardamos as chaves.",
      "Pista 2: Agora, veja atr√°s do quadro na sala.",
      "Pista 3: Finalmente, verifique dentro do livro favorito.",
    ];

    const finalMsg = "Parab√©ns! Voc√™ encontrou o presente escondido! üéâ";

    const finalImgUrl = "https://upload.wikimedia.org/wikipedia/commons/thumb/4/42/Emoji_u1f389.svg/1024px-Emoji_u1f389.svg.png"; // emoji festa

    let etapa = -1;

    const textEl = document.getElementById("text");
    const btn = document.getElementById("nextBtn");
    const img = document.getElementById("finalImage");

    btn.addEventListener("click", () => {
      etapa++;
      if (etapa < pistas.length) {
        textEl.textContent = pistas[etapa];
      } else if (etapa === pistas.length) {
        textEl.textContent = finalMsg;
